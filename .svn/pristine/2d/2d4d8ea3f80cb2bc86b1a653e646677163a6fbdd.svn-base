<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

<section class="section bg-light">
    <div class="container-fluid" id="appcontroller" v-cloak>
        <div class="row">
            <div class="col">
                <h4>입주권 목록</h4>

                <!-- 버튼 -->
                <div class="row">
                    <div class="col text-right">
                        <a class="btn btn-dark btn-sm mb-2" href="/apt/regAptMember"
                            role="button">등록</a>
                    </div>
                </div>
                <!-- 버튼 -->

                <!-- 테이블 -->
                <!-- 총규모 = 매매가 + 추가분담금, 이주비 = 기본이주비 + 추가이주비 -->
                <div class="row">
                    <div class="col">
                        <div class="table-responsive">
                            <table
                                class="table table-bordered table-hover table-light table-sm">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>매물번호</th>
                                        <th>등록일</th>
                                        <th>단지</th>
                                        <th>신규 동/층</th>
                                        <th>기존평형</th>
                                        <th>신청평형</th>
                                        <th>매매가</th>
                                        <th>추가분담금</th>
                                        <th>총규모</th>
                                        <th>이주비</th>
                                        <th>진행정보</th>
                                        <th>변경일</th>
                                        <th>표출유무</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <!-- loop -->
                                    <tr v-for="(post,i) in posts.content">
                                        <td>{{post.aptCode}}</td>
                                        <td>{{post.dong}}</td>
                                        <td>{{post.old_apt}}</td>
                                        <td>{{post.new_dong}} / {{post.new_floor}}</td>
                                        <td class="text-right">{{post.old_apt_size}}</td>
                                        <td class="text-right">{{post.room_count}}</td>
                                        <td>{{post.restroom_count}}</td>
                                        <td class="text-right">{{post.trade_price}}</td>
                                        <td>{{post.addon_price}}</td>
                                        <td>{{post.rent_price}}</td>
                                        <td>{{post.move_price_basic}}</td>
                                        <td>{{post.guarantee_desc}}</td>
                                        <td>{{post.seqNo}}</td>
                                    </tr>
                                    <!-- loop -->


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- 테이블 -->

                <!-- 페이징 -->
                <div class="row">
                    <div class="col">
                        <ul class="pagination justify-content-center">
                            <li class="page-item btn-light" v-if="!posts.first"><a
                                class="page-link" @click="decrement();getList()">&lt; 이전</a>
                            <li class="page-item btn-light" v-else-if="!posts.last"><a
                                class="page-link" @click="increment();getList()">다음 &gt;</a></li>
                        </ul>
                    </div>
                </div>
                <!-- 페이징 -->

                <input type="hidden" id="url" value="/getAptMemberList">
            </div>
        </div>
    </div>
</section>
<script src="/resources/js/common/comList.js"></script>
